<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/altopay_bg"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/margin_25"
        android:paddingBottom="@dimen/margin_20"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_6"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="@dimen/text_size_16"
                android:layout_marginBottom="@dimen/margin_10"/>

            <com.altopay.lib.utils.CenterTextView
                android:id="@+id/tv_dialog_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/color_6"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divid_line_h"
        android:background="@color/color_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_45"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_5"
            android:textSize="@dimen/text_size_15" />

        <View
            android:id="@+id/v_dialog_line_vertical"
            android:layout_width="@dimen/divid_line_h"
            android:layout_height="match_parent"
            android:background="@color/color_3" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_45"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/color_6"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

</LinearLayout>