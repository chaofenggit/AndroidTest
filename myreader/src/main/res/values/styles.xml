<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/C_EF4145</item>
        <item name="colorPrimaryDark">@color/C_EF4145</item>
        <item name="colorAccent">@color/C_EF4145</item>
    </style>

    <style name="normal_editText_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/C_EF4145</item>
        <item name="android:textColorHint">@color/CC_C1C1C1</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

</resources>
