<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_file"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/cb_file_selected"
            android:textColor="@color/C_000000"/>

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name"
            android:text="1212.kb"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/C_4A4A4A"/>

        <TextView
            android:id="@+id/tv_file_modify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_file_name"
            android:layout_alignTop="@id/tv_file_size"
            android:layout_toRightOf="@id/tv_file_size"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="2017-10-24"
            android:textColor="@color/C_4A4A4A"/>

        <CheckBox
            android:id="@+id/cb_file_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="false"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/C_E6E6E6"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>